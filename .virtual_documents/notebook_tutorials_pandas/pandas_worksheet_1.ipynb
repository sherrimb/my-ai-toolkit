median = df["sepal length (cm)"].median()
df1 = df[df["sepal length (cm)"] > median]

# Check for any values in the sepal length column greater than median
if (df1["sepal length (cm)"]<=5.8).any():
    print("the operation failed. Try again.")
else: 
